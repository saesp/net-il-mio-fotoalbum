<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="photos"></div>

    <div>
            <input type="text" id="subject" placeholder="Oggetto"/>
            <span id="subject_validation" class="text-danger"></span>

            <textarea id="content" rows="5" placeholder="Contenuto"></textarea>
            <span id="content_validation" class="text-danger"></span>

            <input type="email" id="email" placeholder="Email"/>
            <span id="email_validation" class="text-danger"></span>

            <div class="text-end">
                <input type="button" class="btn btn-small btn-info" value="Invia" onclick="createMessage()">
            </div>
    </div>
</div>


@model Photo

<div class="container">
    <h1>Foto</h1>

    <ul>
        <li>
            <h3>@Model.Title</h3>
            <img src="@Model.Image" alt="">
            <p>@Model.Description</p>
            <div>@Model.Visible</div>
        </li>

        <ul>
        @foreach(var category in Model.Categories)
        {
            <li>
                @category.Name
            </li>    
        }
        </ul>
    </ul>
</div>
